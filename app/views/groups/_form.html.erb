<%= form_for group do |f| %>
  <div>
    <%= f.label :name %></br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %></br>
    <%= f.text_area :description %>
  </div>

  <div>
  	<%= f.label :link %></br>
  	<%= f.text_area :link %>
  </div>
  
  <div class="form-radio">
    <div>
      <%= f.radio_button :privacy, 'Open' %>
      <%= f.label :privacy_open, 'Open'%>
      <i class="fi-web"></i>
      <span class="note">Anyone can see the group, who's in it, and what members post.</span>
    </div>

    <div>
      <%= f.radio_button :privacy, 'Close' %>
      <%= f.label :privacy_close, 'Close'%>
      <i class="fi-lock"></i>
      <span class="note">Anyone can see the group and who's in it. Only members see posts.</span>
    </div>

     <div>
      <%= f.radio_button :privacy, 'Secret' %>
      <%= f.label :privacy_secret, 'Secret'%>
      <i class="fi-shield"></i>
      <span class="note">Only members see the group, who's in it, and what members post.</span>
    </div>
  </div>
  <div>
    <%= f.submit "Create", class:"button tiny submit devise-button" %>
  </div>
<% end %>

