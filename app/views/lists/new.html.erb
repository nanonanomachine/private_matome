<h1>New List</h1>

<%= form_for shallow_args(@group, @list) do |f| %>
	<p>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</p>
	<p>
		<%= f.label :image %>
		<%= f.file_field :image %>
	</p>
	<p>
		<%= f.label :remote_image_url, "or image URL" %>
		<%= f.text_field :remote_image_url %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>