<h2>Edit User</h2>

<%= form_for(@user, :url => {:action => "update_avatar"}) do |f| %>
	<div class="field">
		<p>Profile Image</p>
		<p>
			<% if current_user.avatar? %>
	        	<%= image_tag current_user.avatar.thumb.url %>
	        <% else %>
	        	<a href="#"><img src="http://placehold.it/300x240&text=[img]" /></a>
	        <% end %>
    	</p>
		<%= f.file_field :avatar %>
	</div>
	<div class = "action_container">
		<%= f.submit("Update Profile Image") %>
	</div>
<% end %>

<%= link_to 'Chane password', password_user_path(@user) %>
